{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "📝 Launch Instance Mode",
            "program": "${workspaceFolder}/app.js",
            "args": [
                "--mode=instance",
                "--login=VkLogin",
                "--password=VkPass",
                "--groupId=-VkGroupId",
                "--out=./output/data.txt"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "👩🏽‍💻Launch Server Mode",
            "program": "${workspaceFolder}/app.js",
            "args": [
                "--mode=microservice",
                "--port=8080"
            ]
        }
    ]
}